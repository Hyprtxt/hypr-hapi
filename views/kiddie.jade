extends ./layouts/layout.jade

block content
  .row
    .col-sm-12
      h2 Let's play some Video Poker!
      p.result Do your best
      p.credits=user.kiddieCreds
      p Rule: 
        span.rule
      .hand
        .poker-card.card.card-1
        .poker-card.card.card-2
        .poker-card.card.card-3
        .poker-card.card.card-4
        .poker-card.card.card-5
      .buttons
        a.btn.btn-primary.deal New Game
        a.btn.btn-primary.draw Draw

block data
  script.
    var mode = 'kiddie';

block script
  script(src='/js/kiddie.js')
  script(src='/js/simple.js')
