doctype html
html
  block head
    include ./includes/head.jade
  body
    block navigation
      nav.navbar.navbar-light.bg-faded
        .container
          a.navbar-brand(href=navbarBrand.link) #{navbarBrand.title}
          ul.nav.navbar-nav
            each nav in navigation
              li.nav-item
                a.nav-link(href=nav.link) #{nav.title}
          a.pull-right(href='/profile') 
            span.btn.btn-sm.btn-primary.m-r Your Profile 
            img(src=user.pic, width=25, height=25)
        
    .container
      block content

    block foot
      include ./includes/foot.jade

    block tags
      script.
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-42766222-10', 'auto');
        ga('send', 'pageview');

    block socket
      - if( env == 'production' )
        script(src='//socket.videopoker.academy/socket.io/socket.io.js')
        script.
          var socket_url = '//socket.videopoker.academy/'
      - else
        script(src='//socket.videopoker.dev/socket.io/socket.io.js')
        script. 
          var socket_url = '//socket.videopoker.dev/'

    block data

    block global
      script.
        var session=!{JSON.stringify( session )}
      each script in javascripts
        script(src=script)

    block script
