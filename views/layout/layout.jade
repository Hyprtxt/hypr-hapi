doctype html
html
  block head
    include ./includes/head.jade
  body
    block navigation
      nav.navbar.navbar-light.bg-faded
        .container
          a.navbar-brand(href=navbarBrand.link) #{navbarBrand.title}
          ul.nav.navbar-nav
            each nav in navigation
              li.nav-item
                - if ( nav.class ) {
                -   nav.class.push('nav-link');
                - }
                a(href=nav.link, id=nav.id, class=nav.class) #{nav.title}
        
    .container
      block content
    block foot
      include ./includes/foot.jade
